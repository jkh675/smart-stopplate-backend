// 1
datasource db {
  provider = "mysql"
  url      = env("MYSQL_CONNECTION_STRING")
}

// 2
generator client {
  provider = "prisma-client-js"
}

enum StageType {
  LONG
  MEDIUM
  SHORT
  OTHER
}

model Stage {
  id            Int       @id @unique @default(autoincrement())
  createdAt     DateTime  @default(now())
  name          String
  description   String
  paperTargets  Int
  noShoots      Int
  popperTargets Int
  isLocked      Boolean   @default(false)
  condition     Int
  type          StageType
}

enum Division {
  OPEN
  STANDARD
  PRODUCTION
  PRODUCTIONOPTICS
  CLASSIC
}

model Shooter {
  id        Int      @id @unique @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  division  Division
}
