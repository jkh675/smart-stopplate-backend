// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// 1
datasource db {
  provider = "mysql"
  url      = env("MYSQL_CONNECTION_STRING")
}

// 2
generator client {
  provider = "prisma-client-js"
}

// 3
model Link {
  id          Int      @id @default(autoincrement()) // 4
  createdAt   DateTime @default(now()) // 5
  description String
  url         String
}

model Stage {
  id            Int      @id @unique @default(autoincrement())
  createdAt     DateTime @default(now())
  name          String
  description   String
  paperTargets  Int
  noShoots      Int
  popperTargets Int
  isLocked      Boolean  @default(false)
  condition     Int
}

enum Division {
  OPEN
  STANDARD
  PRODUCTION
  PRODUCTIONOPTICS
  CLASSIC
}

model Shooter {
  id        Int      @id @unique @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  division  Division
}
